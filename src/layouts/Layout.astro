---
interface Props {
	title: string;
}

const { title } = Astro.props;

// fonts
import '@fontsource/barlow/200.css';
import '@fontsource/barlow/400.css';
import '@fontsource/barlow/600.css';
import '@fontsource/barlow/800.css';
---

<!doctype html>
<html lang="es" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-barlow relative dark:text-teal-50">
		<div class="image-back w-full h-dvh bg-teal-100 fixed -z-10 dark:bg-teal-999 transition-colors duration-300 ease-linear">
			<div class="absolute -top-[25%] left-1/2 -translate-x-1/2 h-[110%] max-h-[650px] aspect-square rounded-full bg-teal-50 blur-2xl animate-scale dark:bg-teal-990"></div>
		</div>
		<slot />
	</body>
</html>

<style>
	* {
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	.animate-scale {
		animation: scale-block 10s ease-in-out infinite alternate;
	}

	@keyframes scale-block {
		0% {
			left: 50%;
			transform: translateX(-50%) scale(1);
		}
		100% {
			transform: translateX(-50%) scale(1.6);
		}
	}
</style>